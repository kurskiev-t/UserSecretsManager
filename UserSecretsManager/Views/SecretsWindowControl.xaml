<UserControl x:Class="UserSecretsManager.Views.SecretsWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserSecretsManager.Views"
             xmlns:viewModels="clr-namespace:UserSettingsManager.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModels:SecretsViewModel/>
    </UserControl.DataContext>

    <DockPanel>
        <!-- Список проектов -->
        <ListBox ItemsSource="{Binding Projects}" SelectedItem="{Binding SelectedProject}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding ProjectName}" FontWeight="Bold"/>
                        <!-- Список секций внутри каждого проекта -->
                        <ListBox ItemsSource="{Binding Sections}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <RadioButton Content="{Binding SectionName}"
                                                     IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                     CommandParameter="{Binding}" 
                                                     Command="{Binding DataContext.SwitchSectionVariantCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</UserControl>
