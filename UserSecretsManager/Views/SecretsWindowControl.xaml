<UserControl x:Class="UserSecretsManager.Views.SecretsWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserSecretsManager.Views"
             xmlns:converters="clr-namespace:UserSecretsManager.Converters"
             xmlns:viewModels="clr-namespace:UserSecretsManager.ViewModels"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <viewModels:SecretsViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <converters:SelectedVariantConverter x:Key="SelectedVariantConverter"/>
        <converters:GroupAndSectionConverter x:Key="GroupAndSectionConverter"/>
    </UserControl.Resources>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <Button Name="ScanButton" Content="Scan" Command="{Binding ScanUserSecretsCommand}" />
            <!-- Список проектов -->
            <ListBox ItemsSource="{Binding Projects}" SelectedItem="{Binding SelectedProject}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding ProjectName}" FontWeight="Bold"/>

                            <!-- Список групп секций внутри каждого проекта -->
                            <ListBox ItemsSource="{Binding SectionGroups}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <!-- Название группы секций -->
                                            <TextBlock Text="{Binding SectionName}" FontWeight="Bold"/>

                                            <!-- Переключение между вариантами в группе секций -->
                                            <ListBox ItemsSource="{Binding SectionVariants}">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel>
                                                            <!-- Радио-кнопка для выбора варианта секции -->
                                                            <RadioButton Content="{Binding Description}" 
                                                             IsChecked="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, 
                                                                             Path=DataContext, 
                                                                             Mode=TwoWay, 
                                                                             Converter={StaticResource SelectedVariantConverter}}"
                                                             GroupName="{Binding RelativeSource={RelativeSource AncestorType=ListBox},
                                                                             Path=DataContext.SectionName}">
                                                                <!-- Уникальная группа для каждого варианта секции -->

                                                                <!-- Передаем в команду как группу и выбранную секцию -->
                                                                <RadioButton.CommandParameter>
                                                                    <MultiBinding Converter="{StaticResource GroupAndSectionConverter}">
                                                                        <!-- Привязка к группе: поднимаемся до ListBox, который содержит все группы -->
                                                                        <!-- группа -->
                                                                        <Binding Path="DataContext" RelativeSource="{RelativeSource AncestorType=ListBox}" />
                                                                        <!-- Привязка к выбранной секции: внутри каждого ListBoxItem -->
                                                                        <!-- выбранная секция -->
                                                                        <Binding Path="DataContext.SelectedVariant" RelativeSource="{RelativeSource AncestorType=ListBox}" />
                                                                    </MultiBinding>
                                                                </RadioButton.CommandParameter>

                                                                <RadioButton.Command>
                                                                    <Binding Path="DataContext.SwitchSectionVariantCommand" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                                                </RadioButton.Command>
                                                            </RadioButton>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>
